<div class="container">
  <a href="/"><img src="/image/logo.png" alt="Who's your daddy?" class="logo"></a>
  <h1>Recent Tweets!</h1>
  <div>
    Enter your Twitter handle to view your most recent tweets
  </div>
  <form method="POST" action="/fetch_tweets" class="center">
    <input type="text" name="handler" placeholder="@yourTwitterHandle" class="form-field">
    <br>
    <input type="submit" class="button" id="submit_btn">
  </form>

  <div id="tweets_container" data-handler="<%= @handler.handler %>">
    <img src="/image/bg-spinner.gif" alt="Updating tweets." class="spinner">
    <div id="notice"></div>
    <div id="tweet_div"></div>
  </div>

</div>
